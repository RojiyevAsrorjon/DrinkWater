<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout"
        android:background="@color/game_buttons"
        android:layout_height="?actionBarSize">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?android:selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:id="@+id/backButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_setting" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal information"
        android:textColor="#9C9C9C"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:id="@+id/textPersonal"
        android:layout_marginLeft="16dp"/>

    <View
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#9C9C9C"
        app:layout_constraintTop_toBottomOf="@id/textPersonal"
        app:layout_constraintLeft_toLeftOf="@id/textPersonal"
        android:layout_marginTop="12dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="16dp"
        android:background="?android:selectableItemBackground"
        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/genderFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"

            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Male"
            android:textSize="16sp"
            android:id="@+id/gender"
            android:textStyle="bold"
            android:layout_gravity="center|end"
            android:textColor="@color/game_buttons"
            android:layout_margin="8dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/genderFrame"
        android:background="?android:selectableItemBackground"

        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/weightFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="16sp"

            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="70 kg"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/weight"
            android:layout_gravity="center|end"
            android:textColor="@color/game_buttons"
            android:layout_margin="8dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/weightFrame"
        android:background="?android:selectableItemBackground"

        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/wakeUpFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake-up time"
            android:textSize="16sp"

            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="06:00 am"
            android:textSize="16sp"
            android:id="@+id/wakeUpTime"
            android:textStyle="bold"
            android:layout_gravity="center|end"
            android:textColor="@color/game_buttons"
            android:layout_margin="8dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/wakeUpFrame"
        android:background="?android:selectableItemBackground"

        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/bedTimeFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedtime"
            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="10:00 pm"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/bedTime"
            android:layout_gravity="center|end"
            android:textColor="@color/game_buttons"
            android:layout_margin="8dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textColor="#9C9C9C"
        app:layout_constraintTop_toBottomOf="@id/bedTimeFrame"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:id="@+id/textOther"
        android:layout_marginLeft="16dp"/>

    <View
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:background="#9C9C9C"
        app:layout_constraintTop_toBottomOf="@id/textOther"
        app:layout_constraintLeft_toLeftOf="@id/textOther"
        android:layout_marginTop="12dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:background="?android:selectableItemBackground"
        android:layout_marginTop="16dp"
        android:id="@+id/resetFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset data"
            android:textSize="16sp"
            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:layout_margin="8dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/resetFrame"
        android:layout_marginHorizontal="16dp"
        android:layout_height="?actionBarSize"
        android:background="?android:selectableItemBackground"
        android:id="@+id/shareFrame">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="16sp"
            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:layout_margin="8dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>