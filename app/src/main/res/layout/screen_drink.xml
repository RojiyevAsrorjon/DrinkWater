<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/game_buttons"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:id="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="How to drink water correctly?"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toRightOf="@id/backButton"
                app:layout_constraintTop_toTopOf="@id/backButton"
                app:layout_constraintBottom_toBottomOf="@id/backButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/bg_first">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image1"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Drink your glass of water slowly with some small sips"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/bg_second">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image2"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Hold the water in our mouth for a while before swallowing"/>
    <ImageView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image2"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/image3">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image3"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Drinking water in a sitting posture is better than in a standing or running position"/>

    <ImageView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image3"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/image4">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image4"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Don`t drink cold water or water with ice"/>
    <ImageView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image4"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/image5">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image5"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Don`t drink water immediately after eating"/>
    <ImageView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image5"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/image6">
    </ImageView>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image6"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image6"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Don`t drink cold water immediately after hot drinks like tea or coffee"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/image6"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/image7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.15"
        android:background="@drawable/bg_seven">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/image7"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/image7"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Always drink water before urinating and do not drink water immediately after urinating"/>
</androidx.constraintlayout.widget.ConstraintLayout>